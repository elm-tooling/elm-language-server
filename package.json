{
  "name": "@elm-tooling/elm-language-server",
  "description": "Implementation of an elm language server in node.",
  "version": "2.2.0",
  "author": "Kolja Lampe",
  "license": "MIT",
  "main": "./out/module.js",
  "files": [
    "out"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elm-tooling/elm-language-server"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "escape-string-regexp": "^4.0.0",
    "execa": "^5.1.1",
    "fast-diff": "^1.2.0",
    "globby": "^11.0.4",
    "pjson": "1.0.9",
    "reflect-metadata": "^0.1.13",
    "ts-debounce": "^3.0.0",
    "tsyringe": "^4.6.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "1.0.1",
    "vscode-uri": "^3.0.2",
    "web-tree-sitter": "^0.19.4"
  },
  "devDependencies": {
    "@elm-tooling/tree-sitter-elm": "^5.3.6",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.5",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "copyfiles": "^2.4.1",
    "doctoc": "^2.0.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-diff": "^27.0.6",
    "jest-mock-extended": "^1.0.16",
    "prettier": "^2.3.2",
    "tree-sitter-cli": "^0.20.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "4.3.5"
  },
  "scripts": {
    "version-patch": "npm --no-git-tag-version version patch",
    "version-minor": "npm --no-git-tag-version version minor",
    "version-major": "npm --no-git-tag-version version major",
    "version": "npm i && npm run compile",
    "copy-wasm": "copyfiles ./tree-sitter-elm.wasm out",
    "compile": "npm run copy-wasm && tsc -p ./",
    "watch": "npm run copy-wasm && tsc -watch -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "build-tree-sitter": "tree-sitter build-wasm ./node_modules/@elm-tooling/tree-sitter-elm",
    "test": "jest --coverage",
    "generate-toc": "doctoc README.md"
  },
  "bin": {
    "elm-language-server": "out/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "elm",
    "elm-lang",
    "language server",
    "language-server",
    "lsp"
  ]
}
