{
  "name": "@elm-tooling/elm-language-server",
  "description": "Implementation of an elm language server in node.",
  "version": "2.7.0",
  "author": "Kolja Lampe",
  "license": "MIT",
  "main": "./out/module.js",
  "files": [
    "out"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elm-tooling/elm-language-server"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "escape-string-regexp": "^4.0.0",
    "execa": "^5.1.1",
    "fast-diff": "^1.2.0",
    "globby": "^11.0.4",
    "pjson": "1.0.9",
    "reflect-metadata": "^0.1.13",
    "request-light": "^0.7.0",
    "ts-debounce": "^4.0.0",
    "tsyringe": "^4.7.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "1.0.8",
    "vscode-uri": "^3.0.7",
    "web-tree-sitter": "^0.20.8"
  },
  "devDependencies": {
    "@elm-tooling/tree-sitter-elm": "^5.6.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "copyfiles": "^2.4.1",
    "doctoc": "^2.2.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-diff": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.8.8",
    "tree-sitter-cli": "^0.20.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  },
  "scripts": {
    "version-patch": "npm --no-git-tag-version version patch",
    "version-minor": "npm --no-git-tag-version version minor",
    "version-major": "npm --no-git-tag-version version major",
    "version": "npm i && npm run compile",
    "copy-wasm": "copyfiles ./tree-sitter-elm.wasm out",
    "compile": "npm run copy-wasm && tsc -p ./",
    "watch": "npm run copy-wasm && tsc -watch -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "build-tree-sitter": "tree-sitter build-wasm ./node_modules/@elm-tooling/tree-sitter-elm",
    "test": "jest --coverage",
    "generate-toc": "doctoc README.md"
  },
  "bin": {
    "elm-language-server": "out/node/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "elm",
    "elm-lang",
    "language server",
    "language-server",
    "lsp"
  ]
}