{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "lib": ["es6", "ES2020"],
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "composite": true,
    "baseUrl": ".",
    "typeRoots": ["./src/typings", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "src/browser",
    "src/index.browser.ts",
    "src/node",
    "src/index.ts"
  ],
  "include": ["src"]
}
